/*3.Write a program to print the following pattern*/ 
    
import java.util.Scanner; 

public class pattern{ 
	public static void main(String args[]){ 
		int i=0,temp,j,k; 
		System.out.print(" "); 
		for(i=1;i<=4;i++){ 
			for(j=4;j>i;j--){ 
				System.out.print(" "); 
			} 

			for(k=1;k<=i;k++){ 
				 
				System.out.print( k + " "); 
			} 
			if(i>1) 
			System.out.print("1"); 

			System.out.println(""); 
		} 
				 
		 
	} 
}
